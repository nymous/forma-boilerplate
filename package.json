{
  "name": "forma-boilerplate",
  "version": "2.0.0",
  "description": "Presentation boilerplate",
  "main": "index.js",
  "repository": "https://github.com/nymous/forma-boilerplate",
  "author": "Thomas Gaudin <thomas.gaudin@centraliens-lille.org>",
  "license": "MIT",
  "scripts": {
    "clean": "del-cli dist/",
    "compile:html": "make-dir dist/ && mustache -p src/presentation.md src/vars.json src/index.html > dist/index.html",
    "compile:css": "make-dir dist/assets/css && catw src/assets/css/stylesheet.css > dist/assets/css",
    "compile": "npm run compile:html && npm run compile:css",
    "copyAssets:img": "node scripts/imagesCopy.js",
    "copyAssets:js": "node scripts/jsCopy.js",
    "copyAssets": "npm run copyAssets:img && npm run copyAssets:js",
    "build": "npm run compile && npm run copyAssets",
    "update:remark": "download https://gnab.github.io/remark/downloads/remark-latest.min.js > src/assets/js/remark.min.js"
  },
  "devDependencies": {
    "browser-sync": "^2.18.13",
    "catw": "^1.0.1",
    "del-cli": "^1.1.0",
    "download-cli": "^1.0.5",
    "make-dir-cli": "^1.0.0",
    "mustache": "^2.3.0",
    "recursive-copy": "^2.0.7"
  }
}
